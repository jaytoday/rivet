{
  "build": {
    "beforeBuildCommand": "yarn build",
    "beforeDevCommand": "yarn start",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Rivet",
    "version": "1.7.8"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "scope": ["$APPLOCALDATA/**", "$APPLOCALDATA/**/.*", "$TEMP/**"]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "process": {
        "relaunch": true
      },
      "shell": {
        "sidecar": true,
        "open": true,
        "execute": true,
        "scope": [
          {
            "name": "../../app-executor/dist/app-executor",
            "sidecar": true
          },
          {
            "name": "npm",
            "args": true,
            "cmd": "npm",
            "sidecar": false
          },
          {
            "name": "../sidecars/pnpm/pnpm",
            "args": true,
            "cmd": "pnpm",
            "sidecar": true
          }
        ]
      },
      "window": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "http": {
        "all": true,
        "scope": ["https://*"]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": ["../../app-executor/dist/app-executor", "../sidecars/pnpm/pnpm"],
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
      "identifier": "com.ironcladapp.rivet",
      "longDescription": "",
      "macOS": {
        "entitlements": "../entitlements.plist",
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": ["https://github.com/Ironclad/rivet/releases/latest/download/latest.json"],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQwRTgxNDEzODJDREJDNzkKUldSNXZNMkNFeFRvUU5VK0NXdEIwNlc3NTREUWpNSmpaeGFwWjFwc21ZT0U5cFlzcy81QndDOXYK"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 1024,
        "resizable": true,
        "title": "Rivet",
        "width": 1200
      }
    ]
  }
}
